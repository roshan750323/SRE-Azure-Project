pipeline{
	agent any
	stages
	{
		stage('build')
		{
			steps{
			echo "build stage is working...."
			}
		}
		stage('test')
		{
			steps{
			echo "test stage is working"
			}
		}
		stage('deploy')
		{
			agent{
				docker{ image 'ubuntu:latest'}
			}
			steps{
				sh 'git --version'
				sh 'docker --version'
				sh 'sudo apt-get update'
			}
		}
	}
}
